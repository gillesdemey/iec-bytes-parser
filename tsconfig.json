{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.tes.ts",
    "node_modules",
    "dist"
  ]
}
